<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd%22%3E">
<hibernate-mapping package="nanterre.miage.baptiste.model">
	<class name="Contact" table="contact">
	<cache usage="read-write"/>
	<id name="idContact" type="int" column="idContact" >
		<generator class="increment"/>
	</id>
	<discriminator column="type" type="string"/>
	<version name="version" access="field" column="VERSION" />
	
	<property name="prenom">
		<column name="prenom" />
	</property>
	
	<property name="nom">
		<column name="nom"/>
	</property>
	
	<property name="email">
		<column name="email"/>
	</property>
	
	<many-to-one name="adresse" column="adresse" class="Adresse" cascade="all" />
	
	<set name="groups" table="contact_group">
		<key column="idContact"></key>
		<many-to-many class="Group" column="idGroup"></many-to-many>
	</set>
	<subclass name="Entreprise" discriminator-value="entreprise">
		<property name="siret" type="string" column="siret"/>
	</subclass>
	
	
  </class>
</hibernate-mapping>